<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:padding="5dp"
    tools:context="ghimdalasgmail_com.gestionepuntinippon.EditUtenteActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/nome"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_nome"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_nome"
                android:text="Nome"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/cognome"
                android:inputType="textCapWords"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_cognome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_cognome"
                android:text="Cognome"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/mail"
                android:inputType="textEmailAddress"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_mail"
                android:text="Mail"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/cell"
                android:inputType="phone"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_cell"
                android:text="Cellulare"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/scadenza"
                android:inputType="date"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_scadenza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_scadenza"
                android:text="Scadenza"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/numero_tessera"
                android:inputType="number"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_numero_tessera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_numero_tessera"
                android:text="Tessera nÂ°"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/registrazione"
                android:inputType="date"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_registrazione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_registrazione"
                android:text="Data di registrazione"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/indirizzo"
                android:inputType="text"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_indirizzo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_indirizzo"
                android:text="indirizzo"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/nascita"
                android:inputType="date"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_nascita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_nascita"
                android:text="Data di nascita"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/cap"
                android:inputType="number"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_cap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_cap"
                android:text="CAP"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/comune"
                android:inputType="text"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_comune"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_comune"
                android:text="Comune"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/provincia"
                android:inputType="text"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_provincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_provincia"
                android:text="Provincia"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fragment
                android:name="ghimdalasgmail_com.gestionepuntinippon.numericUpDown"
                android:id="@+id/punti_add"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/label_add_punti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/label_add_punti"
                android:text="Modifica punti"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <fragment
            android:name="ghimdalasgmail_com.gestionepuntinippon.InserimentoPunti"
            android:id="@+id/sepsa_add"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/label_add_spesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="onSalvaClick"
                app:srcCompat="@drawable/ic_action_save" />
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="onDeleteClick"
                app:srcCompat="@drawable/ic_action_delete" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
