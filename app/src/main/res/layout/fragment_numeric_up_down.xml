<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ghimdalasgmail_com.gestionepuntinippon.numericUpDown">

    <ImageButton
        android:id="@+id/btn_add_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="onPiuClick"
        app:srcCompat="@drawable/ic_action_add" />

    <ImageButton
        android:id="@+id/btn_rem_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btn_add_number"
        android:onClick="onMenoClick"
        app:srcCompat="@drawable/ic_action_remove" />
    <TextView
        android:id="@+id/numero"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btn_rem_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
